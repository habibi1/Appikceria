<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cv_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="0dp"
    android:layout_margin="@dimen/margin_little">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/image_item"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_image"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_weight="4.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_little">

            <TextView
                android:id="@+id/tv_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/judul"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:padding="@dimen/padding_little"/>

            <TextView
                android:id="@+id/tv_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keterangan"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/padding_little"/>

            <TextView
                android:id="@+id/tv_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tahun"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/padding_little"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>