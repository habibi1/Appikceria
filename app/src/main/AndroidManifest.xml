<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bkipmlampung.appikceria">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false"/>

    <permission
        android:name="com.bkipmlampung.appikceria.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.bkipmlampung.appikceria.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="q"
        android:fullBackupContent="@xml/backup_descriptor"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".ui.informasi.berita.BeritaActivity" />
        <activity android:name=".LupaPasswordActivity" />
        <activity android:name=".ui.profil.TentangActivity" />
        <activity
            android:name=".ui.informasi.kegiatan_operasional.laboratorium.LaboratoriumActivity"
            android:parentActivityName=".ui.informasi.KegiatanOperasionalActivity" />
        <activity
            android:name=".ui.bantuan.BantuanActivity"
            android:parentActivityName=".InputTeleponActivity" />
        <activity
            android:name=".ui.informasi.kegiatan_operasional.lalu_lintas.LaluLintasActivity"
            android:parentActivityName=".ui.informasi.KegiatanOperasionalActivity" />
        <activity android:name=".ui.intro.IntroActivity" />
        <activity
            android:name=".ui.informasi.DataKepegawaianActivity"
            android:parentActivityName=".BerandaActivity" />
        <activity
            android:name=".ui.informasi.KegiatanOperasionalActivity"
            android:parentActivityName=".BerandaActivity" />
        <activity
            android:name=".ui.informasi.ProfilBKIPMActivity"
            android:parentActivityName=".BerandaActivity" />
        <activity android:name=".ui.penyakit.DetailPenyakitActivity" />
        <activity
            android:name=".ui.home.survei_kepuasan.SurveiKepuasanActivity"
            android:parentActivityName=".BerandaActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.home.pengajuan_pkl.PengajuanPKLActivity"
            android:parentActivityName=".BerandaActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.home.pengaduan.PengaduanActivity"
            android:parentActivityName=".BerandaActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.home.keluhan_penyakit.KeluhanPenyakitActivity"
            android:parentActivityName=".BerandaActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RegistrasiActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".BerandaActivity" />
        <activity
            android:name=".InputKodeOTPActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".InputPasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".InputTeleponActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.bkipmlampung.appikceria"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>